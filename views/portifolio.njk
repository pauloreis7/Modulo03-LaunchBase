{% extends "layout.njk" %}

{% block head %}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<title>Portifolio - Paulo Reis</title>

{% endblock %}

{% block content %}

        <div id="wrapper">

            <h1>Aulas</h1>

        </div>

        <section class="cards">

            {% for item in itens %}

                <article class="card" id="{{item.id}}">

                    <div class="card_image {{ 'featured-wrapper' if item.featured }}">
                        <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="VÃ­deo de {{item.title}}" />

                        {% if item.featured %}

                            <div class="featured">Featured</div>

                        {% endif %}

                    </div>
        
                    <div class="card_content">
                        <p>{{item.title}}</p>
                    </div>
        
                    <div class="card_info">
                        <p>{{item.duration}}</p>
        
                        <p class="card_price">{{item.price}}</p>

                    </div>

                </article>

            {% endfor %}

        </section>

        <section class="modal-overlay">

            <div class="modal">

                <a class="close-modal">

                    <i class="material-icons">close</i>

                </a>

                <div class="modal-content">

                    <iframe src="" frameborder="0"></iframe>

                </div>
                
            </div>

        </section>

    <script src="scripts.js"></script>

{% endblock %}